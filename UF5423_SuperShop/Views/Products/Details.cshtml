        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductIsAvailable)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductIsAvailable)
        </dd>
        <dt class = "col-sm-2">
