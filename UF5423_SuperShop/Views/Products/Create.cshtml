@model UF5423_SuperShop.Models.ProductViewModel // Model to be used in view.

@{
    ViewData["Title"] = "Create new product";
}

<h1>New </h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data"> @* Form which allows file uploads. *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="_Products" />

            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Create</button> @* Button with icon. *@
                <a asp-action="Index" class="btn btn-danger"><i class="fa fa-chevron-left"></i> Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
